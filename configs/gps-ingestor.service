[Unit]
Description=GPS Data Ingestor Gunicorn daemon
After=network.target

[Service]
Type=notify
User=www-data
Group=www-data
RuntimeDirectory=gunicorn
WorkingDirectory=/path/to/gps-data-ingestor
Environment="PATH=/path/to/gps-data-ingestor/venv/bin"
ExecStart=/path/to/gps-data-ingestor/venv/bin/gunicorn -c gunicorn.conf.py main:app
ExecReload=/bin/kill -s HUP $MAINPID
Restart=on-failure
RestartSec=10
KillMode=mixed
TimeoutStopSec=5

[Install]
WantedBy=multi-user.target